<% if @errors.count > 0 %>
  &nbsp; | <%= @errors.count %> Error<%= "s" if @errors.count > 0 %>
  ------------- | ------------ <% @errors.each do |error| %>
    :no_entry_sign: | <%= error %><% end %>
<% else %>
  :white_check_mark: No errors found
<% end %>

<% if @warnings.count > 0 %>
  &nbsp; | <%= @warnings.count %> Warning<%= "s" if @warnings.count > 0 %>
  ------------- | ------------ <% @warnings.each do |warning| %>
    :warning: | <%= warning %><% end %>
<% else %>
  :white_check_mark: No warnings found
<% end %>

